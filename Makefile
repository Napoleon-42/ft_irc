# **************************************************************************** #
#							FT_IRC MAKEFILE									   #
# **************************************************************************** #

NAME		= ft_irc

SRCS_DIR	= srcs/

OBJS_DIR	= objs/

INCL_DIR	= includes/

CC			= c++

CFLAGS		= -Wall -Wextra -Werror -std=c++98 -I ${INCL_DIR}

FLAGS		= 

# **************************************************************************** #

INCL		= ${INCL_DIR}ft_irc.hpp

SRCS		=	main.cpp \
				utils.cpp

# **************************************************************************** #

OBJS		:= ${addprefix ${OBJS_DIR}, ${SRCS:.cpp=.o}}

${NAME}:	${OBJS} ${INCL}
		${CC} -o ${NAME} ${OBJS} ${FLAGS} 

${OBJS}:	$(addprefix ${SRCS_DIR}, ${SRCS})
				${CC} ${CFLAGS} -c $< -o $@

###############################################################################

all:	${NAME}


clean:	
		rm ${OBJS}

fclean:	clean
		rm ${NAME}

re:	fclean all